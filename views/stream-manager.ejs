  <script>
    function keydown(e) {
      if (e.keyCode === 13) {
        e.preventDefault();
        console.log(e);
        let sourceElement = e.srcElement;
        let createdRow = document.createElement('TR');
        let createdElement = document.createElement('TD');
        createdElement.contentEditable = 'true';
        createdElement.onkeydown = keydown;
        createdElement.innerText = '';
        createdRow.appendChild(createdElement);
        sourceElement.parentElement.parentElement.appendChild(createdRow);
        console.log(e);
      }
    }

    var socket = io();

    function sendMode(string) {
      socket.emit('setMode', string);
    }
  </script>
